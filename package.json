{
  "name": "book-thingy",
  "version": "1.0.0",
  "description": "A simple, offline book tracking app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start-prod": "NODE_ENV=production electron .",
    "build-win": "NODE_ENV=production electron-builder --win",
    "build-mac": "NODE_ENV=production electron-builder --mac",
    "build-linux": "NODE_ENV=production electron-builder --linux"
  },
  "keywords": [
    "books",
    "library",
    "tracking",
    "reading"
  ],
  "author": "Andres Salazar",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.rovenset.bookthingy",
    "productName": "Book Thingy",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "sign": false,
      "signingHashAlgorithms": [],
      "certificateSubjectName": null,
      "publisherName": null,
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }
}
